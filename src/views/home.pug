doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Zoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom 
        main 
            div#welcome 
                form 
                    input(placeholder="room name", required, type="text", name="")
                    button Enter room 
            div#call 
                div#myStream
                    video#myFace(autoplay, playsinline, width="400", height="400") <!-- palysinline : 모바일에서 전체화면이 되지 않고 오직 웹이트에서만 실행된다 -->
                    button#mute Mute
                    button#camera Turn Camera Off
                    select#cameras
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")